<UserControl x:Class="Camera_Final.UIView.Camera"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Wpf="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf" 
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1366" x:Name="UIRootView" Loaded="UIRootView_Loaded" Unloaded="UIRootView_Unloaded">
    <Canvas x:Name="UIRoot" Background="Green">
        <Wpf:VlcControl x:Name="myVlcControl"/>
        <Image x:Name="UIView" Source="{Binding VideoSource, ElementName=myVlcControl}" Width="{Binding ElementName=UIRootView,Path=Width}" Height="{Binding ElementName=UIRootView,Path=Height}" Canvas.Left="0" Canvas.Top="0"></Image>
       
    </Canvas>
</UserControl>
