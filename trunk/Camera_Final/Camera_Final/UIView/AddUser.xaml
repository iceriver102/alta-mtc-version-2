                <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Mật khẩu" Canvas.Top="180" Width="328" FontSize="13.33"/>
                <PasswordBox x:Name="UIPass" Height="25" Canvas.Left="10"  Canvas.Top="201" Width="328" Padding="3.3"/>
