                <TextBox x:Name="UIType" Height="25" Canvas.Left="10"  Canvas.Top="325" Width="328" Padding="3.3"/>
                <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Tên đăng nhập" Canvas.Top="120" Width="328" FontSize="13.33"/>
                <TextBox x:Name="UIUserName" Height="25" Canvas.Left="10" TextWrapping="NoWrap" Text="" Canvas.Top="141" Width="328" Padding="3.3"/>
                <TextBlock x:Name="UITitleOldPass" Canvas.Left="10" TextWrapping="Wrap" Text="Mật khẩu cũ" Canvas.Top="361" Width="328" FontSize="13.33"/>
                <PasswordBox x:Name="UIOldPass" Height="25" Canvas.Left="10"  Canvas.Top="382" Width="328" Padding="3.3"/>


            </Canvas>
        </Border>
    </Canvas>
</UserControl>
