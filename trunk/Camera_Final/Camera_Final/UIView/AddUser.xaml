            </Border.Effect>
            <Canvas>
                <TextBlock x:Name="UITitle" TextWrapping="Wrap" Padding="5,6" Text="Thêm User" Width="348" Height="40" Foreground="White" Background="#FFFF5100" FontFamily="/Camera_Final;component/Asset/Fonts/#Myriad Pro" FontSize="21"/>
