                <Canvas Height="40" Width="348" Background="#FFFF5100" Canvas.Top="415">
                    <TextBlock TextAlignment="Center" Padding="0,3"  Canvas.Left="303" TextWrapping="Wrap" Text="&#xf0c7;" Height="40" Width="45" FontFamily="/Camera_Final;component/Asset/Fonts/#FontAwesome" FontSize="33" Foreground="White" Cursor="Hand" MouseLeftButtonUp="SaveUser" ToolTip="Lưu dữ liệu"/>

