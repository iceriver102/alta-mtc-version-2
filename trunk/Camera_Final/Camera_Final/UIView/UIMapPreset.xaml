<UserControl x:Class="Camera_Final.UIView.UIMapPreset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="34" d:DesignWidth="170" FontFamily="/Camera_Final;component/Asset/Fonts/#FontAwesome" FontSize="30" PreviewMouseLeftButtonUp="UserControl_PreviewMouseLeftButtonUp" MouseLeftButtonDown="UserControl_MouseLeftButtonDown" MouseMove="UserControl_MouseMove" Cursor="Hand" Foreground="#FF22B651" MouseDoubleClick="UserControl_MouseDoubleClick">
    <Canvas x:Name="UIRoot">
        <TextBlock x:Name="Icon" Width="34" Text="&#xf13d;" Height="34" Padding="2"  />
        <TextBlock x:Name="UIName"  Text="" Height="34"  Canvas.Left="34" Padding="3,7" FontFamily="/Camera_Final;component/Asset/Fonts/#Myriad Pro" FontSize="14.333"  />
    </Canvas>
    <UserControl.ContextMenu>
        <ContextMenu>
           <!-- <MenuItem Header="Debug" Click="DebugPreset" /> -->
            <MenuItem Header="Quan sát" Click="GotoPreset" />           
            <MenuItem Header="Xóa Preset" Click="DeletePreset"/>           
        </ContextMenu>
    </UserControl.ContextMenu>
</UserControl>
